#!/usr/bin/make -f
%:
	dh $@

CC = gcc
CFLAGS = -g -Wall
INSTALL_PROGRAM = install

build:
	$(checkdir)
	cmake -DCMAKE_INSTALL_PREFIX=/usr .
	$(MAKE) CC="$(CC)" CFLAGS="$(CFLAGS)"
	touch build

clean:
	$(checkdir)
	rm -f build
	cmake -DCMAKE_INSTALL_PREFIX=/usr .
	[ ! -f Makefile ] || $(MAKE) clean
	rm -r *.cmake Makefile CMakeFiles CMakeCache.txt
	rm -rf *~ debian/tmp debian/*~ debian/files* debian/substvars